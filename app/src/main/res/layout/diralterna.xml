<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direcciones Alternas"
            android:textColor="@color/blue"
            android:textSize="@dimen/titulo"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección 1"
            android:textColor="@color/blue" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono 1"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/Dir1_tel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="phone"
                android:minLines="2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono 2"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/Dir1_tel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/Dir1_direccion"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textMultiLine" />

            <View
                android:id="@+id/View06"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="@color/blue2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección 2"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono 1"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/Dir2_tel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono 2"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/Dir2_tel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/Dir2_direccion"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textMultiLine" >

                <requestFocus />
            </EditText>
        </TableLayout>
    </LinearLayout>

</ScrollView>