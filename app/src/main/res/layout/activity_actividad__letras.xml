                android:text="@string/textoImprimirAviso"
                android:textColor="#000000" />

            <Button
                android:id="@+id/bt_VerDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Domicilio Alterno"
                android:textColor="#000000" />

            <Button
                android:id="@+id/bt_agregaDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
