                <TextView
                    android:id="@+id/ActividadLetras_Cliente"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/ActividadLetras_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/back_color" />

                <View
                    android:id="@+id/View04"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/linea" />

                <TableRow
                    android:id="@+id/tableRow0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_custid"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                    <TextView
                        android:id="@+id/ActividadLetras_Custid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                </TableRow>

                <View
                    android:id="@+id/View1"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/linea" />

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_LetrasV"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                    <TextView
                        android:id="@+id/ActividadLetras_saldo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                </TableRow>

                <View
                    android:id="@+id/View05"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/linea" />

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_LetrasT"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                    <TextView
                        android:id="@+id/ActividadLetras_saldoTotal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                </TableRow>

                <View
                    android:id="@+id/View06"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/linea" />

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_mora"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                    <TextView
                        android:id="@+id/ActividadLetras_moratorios"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />
                </TableRow>

                <View
                    android:id="@+id/View07"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/linea" />

