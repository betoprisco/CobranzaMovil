                android:layout_height="wrap_content"
                android:text="@string/textoVerReferencias"
                android:textColor="#000000" />

            <!-- PARA MOSTRAR LAS COMPRAS DEL CLIENTE - JAPP - 25-02-2016 -->

            <Button
                android:id="@+id/bt_VerCompras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textoVerCompras"
                android:textColor="#000000" />

