                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_PagoRequerido"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />

                    <TextView
                        android:id="@+id/ActividadLetras_PagoRequerido"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color" />
                </TableRow>

                <!-- PARA MOSTRAR EL CAMPO "LIQUIDE CON" DEL CLIENTE - JAPP - 02-02-2016 - INICIO -->
                <View
                    android:id="@+id/ViewLiquide"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/linea"/>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textoLiquide"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"/>

                    <TextView
                        android:id="@+id/ActividadLetras_Liquide"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/noInfo"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"/>
                </TableRow>
                <!-- PARA MOSTRAR EL CAMPO "LIQUIDE CON" DEL CLIENTE - JAPP - 02-02-2016 - FIN -->

                <!-- PARA MOSTRAR LA ÚLTIMA GESTIÓN DEL CLIENTE - JAPP - 01-04-2016 - INICIO -->
                <View
                    android:id="@+id/ViewGestiones"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/linea"/>

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ultUsuarioAsig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textoUltAsig"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ultUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:text="@string/noInfo"/>

                </TableRow>
                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- ACCIÓN -->
                    <TextView
                        android:id="@+id/action"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textoPerspectiva"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/perspectiva"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/noInfo"
                        android:textColor="@color/back_color"/>
                </TableRow>

                <!-- COMENTARIO -->
                <TextView
                    android:id="@+id/comentario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textoComentario"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/back_color"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/historial"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/back_color"
                    android:text="@string/noInfo"/>

                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- FECHA ACTUALIZACIÓN -->
                    <TextView
                        android:id="@+id/fechaUpd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textoFechaUpd"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/fecha"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:text="@string/noInfo"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- FECHA SEGUIMIENTO -->
                    <TextView
                        android:id="@+id/fechaSeg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textoFechaSeg"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/fechaSeguimiento"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:text="@string/noInfo"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- MONTO -->
                    <TextView
                        android:id="@+id/monto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textoMonto"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/montoPago"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/back_color"
                        android:text="@string/noInfo"/>
                </TableRow>
                <!-- PARA MOSTRAR LA ÚLTIMA GESTIÓN DEL CLIENTE - JAPP - 01-04-2016 - FIN -->

            </TableLayout>

            <View
                android:id="@+id/View03"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="@color/blue2" />

            <Button
                android:id="@+id/buttonVerGPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Ver Coordenadas" />

            <Button
                android:id="@+id/btn_ActividadLetras_btnLista"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="@string/texto_VerLetras"
                android:textColor="#000000" />


            <Button
                android:id="@+id/btn_Convenio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_span="2"

                android:text="@string/texto_Convenio"
                android:textColor="#000000" />

            <View
                android:id="@+id/View01"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
