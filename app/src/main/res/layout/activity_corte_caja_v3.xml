<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:orientation="vertical"
    tools:context=".CorteCajaV3" >

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Texto_Fecha"
            android:textColor="@color/blue"
            android:textSize="@dimen/titulo" />

        <EditText
            android:id="@+id/txt_corte_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" >
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_corte_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_corte_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/calendar" />

        <Button
            android:id="@+id/btn_corte_buscacorte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/magnifier2" />

        <Button
            android:id="@+id/btn_corte_imprimir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/checkmark" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Texto_Total"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/txt_corte_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue" />
    </LinearLayout>

    <ListView
        android:id="@+id/lst_corte_abonos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" >
    </ListView>

</LinearLayout>